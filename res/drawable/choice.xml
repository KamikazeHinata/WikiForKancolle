<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/blue" />
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
            <solid android:color="@color/blue" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false" android:state_selected="false">
        <shape >
            <stroke android:width="1dp" android:color="@color/blue" />
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
        </shape>
    </item>
    
    <item android:state_pressed="true" android:state_focused="false" android:state_selected="false">
        <shape >
            <stroke android:width="1dp" android:color="@color/blue" />
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
            <gradient android:startColor="@color/sblue" android:endColor="@color/white" android:type="radial" android:gradientRadius="50"/>
        </shape>
    </item>
    
    <item android:state_focused="true" android:state_pressed="false" android:state_selected="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/blue" />
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
            <solid android:color="@color/blue" />
        </shape>
    </item>
    
    <item android:state_focused="false" android:state_pressed="false" android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/blue" />
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
            <solid android:color="@color/blue" />
        </shape>
    </item>
    
     <item android:state_focused="true" android:state_pressed="true" android:state_selected="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/blue" />
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp"/>
            <solid android:color="@color/blue" />
        </shape>
    </item>
</selector>
