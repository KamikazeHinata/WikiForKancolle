<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" >
    
              <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="35dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="30sp"
                android:layout_height="20sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:text="出击"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view1"
                android:layout_marginTop="87dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="300sp"
                android:layout_height="60sp"
                android:layout_below="@+id/view1"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/textView1"
                android:text="包含正航、装母、轻母共2只以上固定A点；ドラム缶装备3只以上且没有空母和雷巡，固定C点"
                android:textColor="@color/gray"
                android:textSize="15dp" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view2"
                android:layout_marginTop="35dp"
                android:background="@color/gray" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view3"
                android:layout_marginTop="85dp"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="30sp"
                android:layout_height="20sp"
                android:layout_below="@+id/view2"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/textView1"
                android:text="A点"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:layout_width="300sp"
                android:layout_height="20sp"
                android:layout_alignTop="@+id/view3"
                android:layout_alignLeft="@+id/textView3"
                 android:layout_marginTop="30dp"
                android:text="全高速舰固定E点"
                android:textColor="@color/gray"
                android:textSize="15dp" />
            
            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view4"
                android:layout_marginTop="35dp"
                android:background="@color/gray" />

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view5"
                android:layout_marginTop="85dp"
                android:background="@color/gray" />
            
             <TextView
                android:id="@+id/textView4"
                android:layout_width="30sp"
                android:layout_height="20sp"
                android:layout_below="@+id/view4"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/textView1"
                android:text="H点"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:layout_width="300sp"
                android:layout_height="20sp"
                android:layout_alignTop="@+id/view5"
                android:layout_alignLeft="@+id/textView3"
                 android:layout_marginTop="30dp"
                android:text="装备4只以上ドラム缶固定M点"
                android:textColor="@color/gray"
                android:textSize="15dp" />
            
            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view6"
                android:layout_marginTop="35dp"
                android:background="@color/gray" />

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view7"
                android:layout_marginTop="85dp"
                android:background="@color/gray" />
            
             <TextView
                android:id="@+id/textView5"
                android:layout_width="30sp"
                android:layout_height="20sp"
                android:layout_below="@+id/view6"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/textView1"
                android:text="L点"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:layout_width="300sp"
                android:layout_height="40sp"
                android:layout_alignTop="@+id/view7"
                android:layout_alignLeft="@+id/textView3"
                 android:layout_marginTop="25dp"
                android:text="ドラム缶装备3只以上且从C点过来，固定M点；从B点过来，固定N点"
                android:textColor="@color/gray"
                android:textSize="15dp" />
            
           
            </RelativeLayout>

    </ScrollView>
